<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/bottom_navigation_bar_image_size"
        android:layout_height="@dimen/bottom_navigation_bar_image_size" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_bottom_navigation_text_margin_top"
        android:maxLines="1"
        android:textColor="@color/main_bottom_navigation_tab_color"
        android:textSize="@dimen/main_bottom_navigation_text_size" />

</LinearLayout>